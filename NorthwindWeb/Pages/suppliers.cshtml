@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr> <th>
                Company Name
            </th> </tr>
        </thead>
        <tbody>
            @foreach (var sup in Model.Suppliers)
            {
                <tr><td>@sup </td></tr>
            }            
        </tbody>
    </table>
</div>

<div class="row">
    <p>
        Enter a name for a new supplier:
    </p>
    <form method="POST">
        <div>
            <input type="text" asp-for="Supplier.CompanyName">
        </div>
        <input type="submit">
    </form>
</div>